{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist-app/electron",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "strict": false,
    "skipDefaultLibCheck": true,
    "types": [],
    
    "lib": ["ES2018"],
    "typeRoots": ["electron/types", "node_modules/@types"],
    
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@services/*": ["electron/services/*"]
    }
  },
  "include": [
    "electron/**/*",
    "electron/types/**/*",
    "node_modules/@types/**/*"
  ],
  "exclude": [
    "src/**/*",
    "node_modules/**/!(@types)/**/*",
    "dist/**/*",
    "release/**/*",
    "projectlibre_build/**/*",
    "projectlibre_contrib/**/*",
    "projectlibre_core/**/*",
    "projectlibre_ui/**/*"
  ]
}
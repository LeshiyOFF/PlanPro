{
  "name": "planpro-electron",
  "version": "1.0.12",
  "description": "ПланПро - Профессиональное ПО для управления проектами",
  "main": "dist-app/electron/main.js",
  "homepage": "./",
  "author": {
    "name": "ООО Просистемы",
    "email": "info@prosystems.ru"
  },
  "license": "CPAL-1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "cross-env VITE_OUT_DIR=dist-app npm run build:frontend && npm run build:electron",
    "build:frontend": "vite build",
    "build:preload": "node scripts/build-preload.js",
    "build:electron": "npm run build:preload && tsc -p tsconfig.electron.json",
    "build:app": "npm run build",
    "build:java": "node scripts/build-java.js",
    "build:java-core": "echo 'Use build:java instead'",
    "build:java-api": "echo 'Use build:java instead'",
    "prepare-jre": "node scripts/prepare-jre.js",
    "prepare-jre:win": "node scripts/prepare-jre.js --platform win",
    "prepare-jre:linux": "node scripts/prepare-jre.js --platform linux",
    "dist": "npm run build && npm run build:java && electron-builder --config electron/electron-builder.forge.config.js",
    "dist:win": "echo 'Preparing VS Code configuration...' && node scripts/force-unlock.js && npm run prepare-jre:win && npm run build && npm run build:java && echo 'Waiting for file system to release JAR files...' && powershell -Command \"Start-Sleep -Seconds 10\" && electron-builder --win --config electron/electron-builder.yml",
    "dist:linux": "npm run prepare-jre:linux && npm run build && npm run build:java && electron-builder --linux --config electron/electron-builder.yml",
    "dist:astra": "npm run prepare-jre:linux && npm run build && npm run build:java && electron-builder --linux deb --config electron/electron-builder.yml",
    "dist:mac": "npm run build && npm run build:java && electron-builder --mac --config electron/electron-builder.yml",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:log": "node scripts/type-check-log.js",
    "knip": "knip",
    "preview": "vite preview",
    "test:java": "node scripts/test-java-launch.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "postinstall": "electron-builder install-app-deps && electron-rebuild"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@oxc-resolver/binding-win32-x64-msvc": "^11.17.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/react": "^10.32.1",
    "@sentry/tracing": "^7.120.4",
    "@sentry/types": "^10.32.1",
    "@wamra/gantt-task-react": "^0.6.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "framer-motion": "^11.11.17",
    "html2canvas": "^1.4.1",
    "i18next": "^23.15.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.3",
    "react-router-dom": "^6.8.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/rollup-win32-x64-msvc": "^4.57.1",
    "@storybook/addon-interactions": "^8.6.15",
    "@storybook/addon-links": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.19.27",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "29.4.6",
    "electron-builder": "^24.13.3",
    "@electron/rebuild": "^3.6.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.3",
    "knip": "^5.82.1",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.28",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.3.3",
    "vite": "^4.4.5",
    "vitest": "^1.6.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.prosystems.planpro",
    "productName": "ПланПро",
    "publish": [
      {
        "provider": "github",
        "owner": "LeshiyOFF",
        "repo": "PlanPro"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "forceCodeSigning": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "resources/jre/win",
          "to": "jre",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "**/*.jar",
      "resources/jre/**/*",
      "resources/*.dll",
      "resources/*.exe"
    ],
    "files": [
      "dist-app/**/*",
      "resources/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "projectlibre_build/dist",
        "to": "java/lib-runtime",
        "filter": [
          "projectlibre.jar"
        ]
      },
      {
        "from": "projectlibre_build/dist",
        "to": "java/lib",
        "filter": [
          "**/*.jar"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-app/electron/main.js"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office",
    "maintainer": "ООО Просистемы <info@prosystems.ru>",
    "extraResources": [
      {
        "from": "resources/jre/linux",
        "to": "jre",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "fileAssociations": [
    {
      "ext": "pod",
      "name": "Проект ПланПро",
      "description": "Файл проекта ПланПро",
      "mimeType": "application/x-planpro",
      "role": "Editor"
    }
  ],
  "deb": {
    "priority": "optional",
    "depends": [
      "libasound2",
      "libnss3",
      "libatk1.0-0",
      "libatk-bridge2.0-0",
      "libc6",
      "libcairo2",
      "libcups2",
      "libdbus-1-3",
      "libexpat1",
      "libfontconfig1",
      "libgbm1",
      "libgcc1",
      "libglib2.0-0",
      "libgtk-3-0",
      "libnspr4",
      "libpango-1.0-0",
      "libpangocairo-1.0-0",
      "libstdc++6",
      "libx11-6",
      "libx11-xcb1",
      "libxcb1",
      "libxcomposite1",
      "libxcursor1",
      "libxdamage1",
      "libxext6",
      "libxfixes3",
      "libxi6",
      "libxrandr2",
      "libxrender1",
      "libxss1",
      "libxtst6"
    ],
    "scripts": {
      "afterInstall": "scripts/linux/after-install.sh"
    },
    "desktop": {
      "Name": "ПланПро",
      "Comment": "Профессиональное ПО для управления проектами",
      "Terminal": "false",
      "Type": "Application",
      "Categories": "Office;ProjectManagement;"
    }
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "category": "public.app-category.productivity"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

    {
      "name": "Import/Export",
      "item": [
        {
          "name": "Import Project File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/project.pod"
                },
                {
                  "key": "format",
                  "type": "text",
                  "value": "pod"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/import",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "import"]
            },
            "description": "Импортировать файл проекта"
          },
          "response": []
        },
        {
          "name": "Export Project",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/projects/{{projectId}}/export?format=pod",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "projects", "{{projectId}}", "export"]
            },
            "description": "Экспортировать проект в POD формате"
          },
          "response": []
        }
